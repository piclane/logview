<Context reloadable="true">
    <!--
        Root Directory

        You can also use environment variables in value, like $HOME or ${HOME} or ${FOO:-/path/to} or ${BAR:+/path/to}
    -->
    <Environment name="app/logview/rootDir" value="/path/to/root" type="java.lang.String" />

    <!--
        Virtual directory under the root directories

        You can also use environment variables in value, like $HOME or ${HOME} or ${FOO:-/path/to} or ${BAR:+/path/to}
    -->
    <Environment name="app/logview/dirs/log" value="/var/log" type="java.lang.String" />
    <Environment name="app/logview/dirs/test" value="/path/to/test" type="java.lang.String" />
    <Environment name="app/logview/dirs/home" value="${HOME}" type="java.lang.String" />

    <!--
        HTML to add to the header

        You can also use environment variables in value, like $HOME or ${HOME} or ${FOO:-/path/to} or ${BAR:+/path/to}
    -->
    <Environment name="app/logview/header" value="
        &lt;a class='right' href='/somelink'>
            &lt;i style='background-image:url(data:image/png;base64,);'>&lt;/i>
        &lt;/a>
    " type="java.lang.String" />
</Context>
